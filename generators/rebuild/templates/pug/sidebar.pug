// sidebar: style can be found in sidebar.less
section.sidebar
  // Sidebar user panel (optional)
  .user-panel
    .pull-left.image
      img.img-circle(src='/common/dist/img/user2-160x160.jpg', alt='User Image')
    |
    .pull-left.info
      p QMR Admin
      // Status
      a(href='#')
        i.fa.fa-circle.text-success
        |  Online
  // search form (Optional)
  form.sidebar-form(action='#', method='get')
    .input-group
      input.form-control(type='text', name='q', placeholder='Search...')
      |
      span.input-group-btn
        button#search-btn.btn.btn-flat(type='submit', name='search')
          i.fa.fa-search
  // /.search form
  // Sidebar Menu
  ul.sidebar-menu(data-widget='tree')
    <% _.each(entities, function(entity) { %>li.treeview
      a(href='/<%= _.toLower(_s.classify(entity.name)) %>')
        i.fa.fa-link
        |
        span <%= _s.classify(entity.name)%>
        |
        span.pull-right-container
          i.fa.fa-angle-left.pull-right
      |
      ul.treeview-menu
        li
          a(href='/<%= _.toLower(_s.classify(entity.name)) %>/add') Add <%= _s.classify(entity.name) %>
        |
        li
          a(href='/<%= _.toLower(_s.classify(entity.name)) %>') List <%= _s.classify(entity.name) %>
    <% }) %>
